{
  "name": "lisa-mobile-app",
  "version": "1.0.0",
  "description": "LISA - Learning Intelligence Support Assistant Mobile App",
  "author": "ALFRED-LUCIFER",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ALFRED-LUCIFER/mobile-elisa.git"
  },
  "keywords": [
    "react-native",
    "typescript",
    "chatbot",
    "rag",
    "machine-maintenance",
    "mobile-app"
  ],
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "react-native clean && cd ios && rm -rf Pods && pod install && cd ..",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace LisaMobileApp.xcworkspace -scheme LisaMobileApp -configuration Release -archivePath build/LisaMobileApp.xcarchive archive",
    "postinstall": "cd ios && pod install && cd .."
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-native/new-app-screen": "0.81.1",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/drawer": "^6.6.6",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@reduxjs/toolkit": "^2.0.1",
    "@types/react-native-vector-icons": "^6.4.18",
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "react": "19.1.0",
    "react-native": "0.81.1",
    "react-native-config": "^1.5.1",
    "react-native-device-info": "^10.13.0",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-haptic-feedback": "^2.2.0",
    "react-native-mmkv": "^2.11.0",
    "react-native-paper": "^5.11.4",
    "react-native-permissions": "^4.1.1",
    "react-native-reanimated": "^3.6.1",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "^3.29.0",
    "react-native-vector-icons": "^10.3.0",
    "react-redux": "^9.0.4",
    "redux-persist": "^6.0.0",
    "socket.io-client": "^4.7.4",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/eslint-config": "0.81.1",
    "@react-native/metro-config": "0.81.1",
    "@react-native/typescript-config": "0.81.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.2",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4.14.202",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "@types/validator": "^13.11.7",
    "detox": "^20.15.2",
    "eslint": "^8.19.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.3",
    "jest": "^29.6.3",
    "lint-staged": "^15.2.0",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
